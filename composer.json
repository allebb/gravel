{
    "name": "ballen/gravel",
    "description": "Gravel is a PHP library which provides easy access to get and display Gravatars.",
    "keywords": ["gravatar", "avatar"],
    "type": "library",
    "homepage": "https://github.com/allebb/gravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Bobby Allen",
            "email": "ballen@bobbyallen.me",
            "homepage": "http://bobbyallen.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*"
    },
    "autoload": {
        "psr-4": {
            "Ballen\\Gravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ballen\\Gravel\\Tests\\": "tests/"
        }
    }
}
